<Window x:Class="Ice_Task_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Family Tree" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Tree View to display the family tree -->
        <TreeView Name="FamilyTreeView" Margin="10" Grid.Column="0" />

        <!-- Right panel for search and add features -->
        <StackPanel Orientation="Vertical" Margin="10" Grid.Column="1">
            <!-- Search feature without placeholder -->
            <TextBox Name="SearchBox" Width="200" Margin="5" />
            <Button Name="SearchButton" Content="Search" Margin="5" Click="SearchButton_Click" />
            <TextBlock Name="SearchResult" Margin="5" />

            <!-- Add member feature without placeholder -->
            <TextBox Name="AddNameBox" Width="200" Margin="5" />
            <DatePicker Name="AddDOBPicker" Margin="5" />
            <CheckBox Name="AddAliveCheckBox" Content="Alive" Margin="5" />
            <Button Name="AddButton" Content="Add Member" Margin="5" Click="AddButton_Click" />
        </StackPanel>
    </Grid>
</Window>
